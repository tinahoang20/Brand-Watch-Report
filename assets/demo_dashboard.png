import matplotlib.pyplot as plt

# Tạo ảnh giả lập giao diện dashboard đơn giản
fig, ax = plt.subplots(figsize=(10, 6))
ax.axis("off")
ax.set_title("📊 Brand Watch Dashboard Preview", fontsize=16, weight='bold')

# Thêm các phần mô phỏng nội dung trong dashboard
ax.text(0.05, 0.83, "🔘 Brand: Pepsi | Date Range: Nov 2024 – Mar 2025", fontsize=12)
ax.text(0.05, 0.73, "🗳 Sentiment Distribution", fontsize=12, weight='bold')
ax.barh(['Positive', 'Neutral', 'Negative'], [68, 22, 10], color=['green', 'gray', 'red'])

ax.text(0.05, 0.50, "🔥 Weekly Engagement", fontsize=12, weight='bold')
ax.plot([1, 2, 3, 4, 5], [420, 490, 530, 510, 600], marker='o', label="Engagement", color='blue')
ax.legend(loc="lower right", fontsize=10)

ax.text(0.05, 0.28, "🏷️ Top Hashtags: #Pepsi #FunChallenge #Taste", fontsize=11)
ax.text(0.05, 0.20, "✨ Top Post: \"Unleash the fizz! Refresh your vibe with Pepsi.\"", fontsize=11)

